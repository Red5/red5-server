<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <!-- ROOT web context -->

    <bean
        id="web.context"
        class="org.red5.server.Context" >

        <property
            name="scopeResolver"
            ref="red5.scopeResolver" />

        <property
            name="clientRegistry"
            ref="global.clientRegistry" />

        <property
            name="serviceInvoker"
            ref="global.serviceInvoker" />

        <property
            name="mappingStrategy"
            ref="global.mappingStrategy" />
    </bean>

    <bean
        id="web.scope"
        class="org.red5.server.WebScope"
        init-method="register" >

        <property
            name="server"
            ref="red5.server" />

        <property
            name="parent"
            ref="global.scope" />

        <property
            name="context"
            ref="web.context" />

        <property
            name="handler"
            ref="global.handler" />

        <property
            name="contextPath"
            value="@context.path@" />

        <property
            name="virtualHosts"
            value="@virtual.hosts@" />
    </bean>

</beans>