<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Import SSE configuration -->
    <import resource="classpath:/red5-sse.xml"/>
    
    <!-- Application adapter with SSE support -->
    <bean id="web.handler" class="org.red5.server.adapter.SSEApplicationAdapter">
        <property name="sseService" ref="sseService"/>
    </bean>
    
    <!-- Optional: Application context -->
    <bean id="web.context" class="org.red5.server.Context" autowire="byType" />
    
    <!-- Optional: Application scope -->
    <bean id="web.scope" class="org.red5.server.scope.WebScope" init-method="register">
        <property name="server" ref="red5.server" />
        <property name="parent" ref="global.scope" />
        <property name="context" ref="web.context" />
        <property name="handler" ref="web.handler" />
        <property name="contextPath" value="" />
        <property name="virtualHosts" value="*" />
    </bean>

</beans>